<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/home_search_text_background"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@mipmap/tuocircle1">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/posterTopPicture"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="14dp"
                android:layout_width="38dp"
                android:layout_height="38dp" />

            <!--<ImageView-->
            <!--android:layout_marginTop="15dp"-->
            <!--android:layout_marginLeft="14dp"-->
            <!--android:layout_width="38dp"-->
            <!--android:layout_height="38dp"-->
            <!--android:src="@mipmap/emotion12"/>-->
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/posterName"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="一研为定"
                android:textColor="@color/colorBlack"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/posterSchool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="金陵大学"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/posterMajor"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="软件工程"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/posterTime"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18小时前"
                    android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/postContext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:maxLines="50"
            android:scrollHorizontally="false"
            android:inputType="textMultiLine"
            android:text="帅气"
            android:textColor="@color/colorBlack"/>


    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <RadioButton
            android:layout_marginLeft="25dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="转发"
            android:button="@null"
            android:drawableLeft="@mipmap/zhuanfa" />
        <RadioButton
            android:layout_marginLeft="25dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="评论"
            android:button="@null"
            android:drawableLeft="@mipmap/pinglun" />
        <RadioButton
            android:layout_marginLeft="25dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="点赞"
            android:button="@null"
            android:drawableLeft="@mipmap/dianzan" />


    </RadioGroup>




</LinearLayout>